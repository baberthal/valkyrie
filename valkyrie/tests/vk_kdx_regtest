#!/bin/bash

# kdexecutor build with qt3.2.0, and don't have source...
. use_qt_320

# run tests
kdxshell -setup ./tests/kdexec/valkyrie_tests.kxs -run all -exporthtml kdx_tmp_out.html

# html to text, and filter output
cat kdx_tmp_out.html \
 | html2text \
 | sed "/^\">$/d" \
 | sed "/^Generated by KD Executor/d"

echo -e "\n"

rm -f kdx_tmp_out.html